            <version>1.7.8</version>
        </dependency>

        <!-- Netty -->
        <dependency>
            <groupId>org.jboss.netty</groupId>
            <artifactId>netty</artifactId>
            <version>3.2.0.Final</version>
        </dependency>

        <!-- Google -->
        <!-- https://code.google.com/p/google-http-java-client/ -->
